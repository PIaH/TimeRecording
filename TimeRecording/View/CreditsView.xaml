<Window x:Class="TimeRecording.View.CreditsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zeiterfassung - Informationen"
        Icon="../Resources/Icon.png"
        Height="250"
        Width="470"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="0,0,0,6"
          FocusManager.FocusedElement="{Binding ElementName=ProjectNameTextBox}">

        <TextBlock FontFamily="Lucida Console"
                   FontSize="15"
                   Margin="5,5,5,5"
                   TextWrapping="Wrap">Diese Software wurde von Peter Ittner entwickelt.<LineBreak />Weitere Informationen, sowie Updates unter:<LineBreak /><Hyperlink NavigateUri="http://ittner.it">http://ittner.it</Hyperlink></TextBlock>

        <Image                Source="..\Resources\Developer_Logo.png"
                              Height="100"
                              VerticalAlignment="Top"
                              Margin="10,111,10,0" />

    </Grid>
</Window>
